<% @page_title = @page.name %>

<h2><%= @page.name %></h2>

<% @page.sections.visible.sorted.each do |section| %>
  <div class="section">
    <h3><%= section.name %></h3>
    <%= image_tag section.avatar.url(:medium) %>
    <% case section.content_type %>
    <% when 'HTML' %>
      <p><%= raw(sanitize(section.content, :tags => ['strong', 'em', 'a', 'p'])) %></p>
    <% when 'text' %>
      <p><%= section.content %></p>
    <% end %>
  </div>
<% end %>