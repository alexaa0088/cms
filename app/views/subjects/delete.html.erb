<% @page_title = "Delete Subject" %>
<%= link_to("<< Back to List", {:action => 'index'}, :class => 'back-link') %>

<div class="row">
  <div class="col-md-4 col-md-offset-4 subjects delete">
    <h2>Delete Subject</h2>
  
    <%= form_for(:subject, :url => {:action => 'destroy', :id => @subject.id}) do |f| %>
  
      <p class="text-center">Are you sure you want to permanently delete subject <strong><%= @subject.name %></strong>?</p>
  
  
      <div class="form-buttons">
        <%= submit_tag("Delete Subject") %>
      </div>
  
    <% end %>
  </div>
</div>