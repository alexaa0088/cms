<% @page_title = "Show Article" %>

<%= link_to("<< Back to List", {:action => 'index', :page_id => @page.id}, :class => 'back-link') %>

<div class="row">
  <div class="col-md-4 col-md-offset-4 sections show">
    <h2>Show Article</h2>
  
    <div class="table-responsive">
      <table class="table table-bordered" summary="Article detail view">
        <tr>
          <th>Page ID</th>
          <td><%= @section.page_id %></td>
        </tr>
        <tr>
          <th>Name</th>
          <td><%= @section.name %></td>
        </tr>
        <tr>
          <th>Position</th>
          <td><%= @section.position %></td>
        </tr>
        <tr>
          <th>Visible?</th>
          <td><%= @section.visible ? 'true' : 'false' %></td>
        </tr>
        <tr>
          <th>Featured?</th>
          <td><%= @section.featured ? 'true' : 'false' %></td>
        </tr>
        <tr>
          <th>Image</th>
          <td><%= image_tag @section.avatar.url(:thumb) %></td>
        </tr>
        <tr>
          <th>Content Type</th>
          <td><%= @section.content_type %></td>
        </tr>
        <tr>
          <th>Content</th>
          <td><%= @section.content %></td>
        </tr>
        <tr>
          <th>Created</th>
          <td><%= @section.created_at %></td>
        </tr>
        <tr>
          <th>Updated</th>
          <td><%= @section.updated_at %></td>
        </tr>
      </table>
    </div>
  </div>
</div>
