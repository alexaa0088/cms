<% @page_title = "Show Page" %>

<%= link_to("<< Back to List", {:action => 'index', :subject_id => @subject.id}, :class => 'back-link') %>

<div class="row">
  <div class="col-md-4 col-md-offset-4 pages show">
    <h2>Show Page</h2>
  
    <div class="table-responsive">
      <table class="table table-bordered" summary="Page detail view">
        <tr>
          <th>Subject ID</th>
          <td><%= @page.subject_id %></td>
        </tr>
        <tr>
          <th>Name</th>
          <td><%= @page.name %></td>
        </tr>
        <tr>
          <th>Permalink</th>
          <td><%= @page.permalink %></td>
        </tr>
        <tr>
          <th>Position</th>
          <td><%= @page.position %></td>
        </tr>
        <tr>
          <th>Visible?</th>
          <td><%= @page.visible ? 'true' : 'false' %></td>
        </tr>
        <tr>
          <th>Created</th>
          <td><%= @page.created_at %></td>
        </tr>
        <tr>
          <th>Updated</th>
          <td><%= @page.updated_at %></td>
        </tr>
      </table>
    </div>
  </div>
</div>
