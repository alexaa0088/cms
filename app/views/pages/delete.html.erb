<div class="row">
  <div class="col-md-4 col-md-offset-4 pages delete">
    <h2>Delete Page</h2>
  
    <%= form_for(:page, :url => {:action => 'destroy', :id => @page.id, :subject_id => @subject.id}) do |f| %>
  
      <p class="text-center">Are you sure you want to permanently delete page <strong><%= @page.name %></strong>?</p>

      <div class="form-buttons">
        <%= submit_tag("Delete Page") %>
      </div>
  
    <% end %>
  </div>
</div>
