<% @page_title = "New Page" %>

<%= link_to("<< Back to List", {:action => 'index', :subject_id => @subject.id}, :class => 'back-link') %>

<div class="row">
  <div class="col-md-4 col-md-offset-4 pages new">
    <h2>Create Page</h2>
  
    <%= form_for(:page, :url => {:action => 'create', :subject_id => @subject.id}) do |f| %>
  
      <%= render(:partial => "form", :locals => {:f => f}) %>
  
      <div class="form-buttons">
        <%= submit_tag("Create Page") %>
      </div>
  
    <% end %>
  </div>
</div>